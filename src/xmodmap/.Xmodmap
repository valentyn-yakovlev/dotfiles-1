! ~/.Xmodmap

! get current mappings: xmodmap -pke
! get current modifier table: xmodmap -pm
! xmodmap ~/.Xmodmap

clear lock
clear mod1
clear mod2
clear mod3
clear mod4
clear mod5
keycode 66 = Hyper_L
keycode 135 = Multi_key
keycode 204 = NoSymbol
keycode 205 = NoSymbol
keycode 206 = NoSymbol
keycode 207 = NoSymbol
keycode 107 = Multi_key Sys_Req
add mod1 = Alt_L Alt_R
add mod2 = Num_Lock
add mod3 = Hyper_L Hyper_R
add mod4 = Super_L Super_R
add mod5 = ISO_Level3_Shift Mode_switch

! Local Variables:
! mode: conf-unix
! End:
