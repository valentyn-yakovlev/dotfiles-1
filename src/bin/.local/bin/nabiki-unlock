#!/bin/bash

if [[ -f "${HOME}/.ssh/initrd_nabiki_rsa" ]]; then
  ssh nabiki-initramfs \
      "echo -ne \"$(pass ls machines/nabiki/cryptsetup | head -n 1)\" >/lib/cryptsetup/passfifo"
else
  # Use Yubikey auth
  ssh root@nabiki.rkm.id.au \
      "echo -ne \"$(pass ls machines/nabiki/cryptsetup | head -n 1)\" >/lib/cryptsetup/passfifo"
fi
